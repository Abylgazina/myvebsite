<canvas class="confetti" id="confetti"></canvas>

<script src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.6.0/dist/confetti.browser.min.js"></script>
<script>
const checklistScreen = document.getElementById('checklistScreen');
const certificateScreen = document.getElementById('certificateScreen');
const finishBtn = document.getElementById('finishChecklist');
const sendBtn = document.getElementById('sendText');
const statusDiv = document.getElementById('status');

sendBtn.addEventListener('click', () => {
    const text = document.getElementById('future').value.trim();
    if(text){
        statusDiv.textContent = "“ö–∞–±—ã–ª–¥–∞–Ω–¥—ã ‚úÖ";
        document.getElementById('future').value = "";
    } else {
        statusDiv.textContent = "“ö–∞–±—ã–ª–¥–∞–Ω–¥—ã ‚úÖ"; // –±–æ—Å –±–æ–ª—Å–∞ –¥–∞ “õ–∞–±—ã–ª–¥–∞–Ω–¥—ã –¥–µ–ø –∫”©—Ä—Å–µ—Ç–µ–º—ñ–∑
    }
});

finishBtn.addEventListener('click', () => {
    checklistScreen.classList.remove('active');
    certificateScreen.classList.add('active');
    const myConfetti = confetti.create(document.getElementById('confetti'), { resize: true });
    myConfetti({ particleCount: 150, spread: 120, origin: { y: 0.6 } });
});
</script>

